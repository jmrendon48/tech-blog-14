{{#if posts.length}}
<section>
  <ol class="">
  {{#each posts as |post|}}
  	<li>
    	<article class="">
        <div class="">
          <div>
            <a href="/dashboard/edit/{{post.id}}">{{post.title}}</a>
          </div>
          <div class="meta">
            Posted by {{post.user.username}} on {{format_date created_at}}
          </div>
        </div>
        <div class="">
          <p>{{post.content}}</p>
        </div>
      </article>
  	</li>
  {{/each}}
	</ol>
</section>
{{/if}}

<a href="/create-post" class="btn btn-dark new-post-btn fixed-bottom new-post-btn">+ New Post</a>