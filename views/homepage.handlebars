<ol class="">
  {{#each posts as |post|}}
  <li>
    <article class="">
      <div class="">
        <div>
          <a href="/post/{{id}}" target="_blank">{{post.title}}</a>
        </div>
        <div class="meta">
          Posted by {{post.user.username}} on {{post.created_at}}
        </div>
      </div>
      <div class="">
        <p>{{post.content}}</p>
      </div>
    </article>
  </li>
  {{/each}}
</ol>